<?xml version="1.0" encoding="utf-8"?>
<extension version="4.0" type="plugin" group="system" method="upgrade">
	<name>System - Switch User</name>
	<creationDate>November 2017</creationDate>
	<author>artd webdesign</author>
	<authorEmail>artd@artd.ch</authorEmail>
	<authorUrl>artd.ch</authorUrl>
	<copyright>Copyright (C) Artd Webdesign GmbH. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>4.0.0</version>
	<description>PLG_SYSTEM_SWITCHUSER_XML_DESCRIPTION</description>

	<namespace path="src">Skurvish\Plugin\System\Switchuser</namespace>
	<files>
		<folder plugin="switchuser">services</folder>
		<folder>src</folder>
		<file>switchuser.xml</file>
	</files>
	<media folder="media" destination="switchuser">
		<folder>images</folder>
	</media>

	<languages folder="language">
		<language tag="en-GB">en-GB/plg_system_switchuser.ini</language>
		<language tag="en-GB">en-GB/plg_system_switchuser.sys.ini</language>
		<language tag="de-DE">de-DE/plg_system_switchuser.ini</language>
		<language tag="de-DE">de-DE/plg_system_switchuser.sys.ini</language>
	</languages>

	<config>
	  <fields name="params" >
	    <fieldset name="basic">
			<field 
				name="login" 
				type="menuitem" 
				default="" 
				disable="separator" 
				label="SWITCHUSER_LOGIN_REDIRECT_URL" 
				description="SWITCHUSER_LOGIN_REDIRECT_URL_DESC" > 
				<option value="">JDEFAULT</option>
			</field>
	    </fieldset>
	  </fields>
	</config>
</extension>
